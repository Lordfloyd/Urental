<% include struct/header.ejs %>
<% include struct/navbar.ejs %>
<div class="container-fluid margin-top text-center">
    <div class="row">
        <!-- gestion des utilisateurs -->
        <div class="col-sm my-4">
            <h2><%= subTitle %></h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Pr√©nom</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users) { %>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <th scope="row"><%= user.id %></th>
                                <td><%= user.firstname %></td>
                                <td><%= user.lastname %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <a href="delete-user/<%= user.id %>" class="btn btn-orange"><i class="fas fa-times"></i></a>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<% include struct/footer.ejs %>