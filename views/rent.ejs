<% include struct/header.ejs %>
<% include struct/navbar.ejs %>
<div class="container-fluid margin-top text-center">
    <div class="row">
        <!-- Menu catÃ©gories -->
        <div class="col-sm-3 mt-4">
            <div class="card">
                <h5 class="card-header h5 bg-orange"><%= subTitleCategories %></h5>
                <div class="card-body">
                    <a href="/rent" class="btn btn-orange">Tous</a>
                    <% if (categories) { %>
                        <% categories.forEach(function(category) { %>
                            <a href="/rent/category/<%= category.id %>" class="btn btn-orange"><%= category.name %></a>
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
        <!-- Liste de tous les biens -->
        <div class="col-sm-9 my-4">
            <h1><%= subTitle %></h1>
            <% if (items) { %>
                <div class="container-fluid mt-4">
                    <div class="row">
                        <% items.forEach(function(item) { %>
                            <div class="col-sm-3 mb-4">
                                <div class="card">
                                    <div class="view overlay">
                                    <img class="card-img-top" src="https://mdbootstrap.com/img/Mockups/Lightbox/Thumbnail/img%20(67).jpg" alt="Card image cap">
                                    <a href="/item/<%= item.id %>">
                                        <div class="mask rgba-white-slight"></div>
                                    </a>
                                    </div>
                                    <div class="card-body">
                                        <h4 class="card-title"><%= item.name %></h4>
                                        <a href="/item/<%= item.id %>" class="btn btn-orange">Louer</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
<% include struct/footer.ejs %>