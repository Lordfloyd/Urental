<% include struct/header.ejs %>
<% include struct/navbar.ejs %>
<!-- Carousel -->
<div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
        <img class="d-block w-100" src="/assets/img/proprietaire-bg.jpg"
            alt="First slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- A propos -->
<div class="container-fluid my-4 text-center">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm-6 my-4">
            <h2><%= subTitleAbout %></h2>
            <hr>
            <p>
                Application Décentralisée pour location d’objets.
                Location d’objets ou de biens automatisés à l’aide d’une interface utilisateur (DApp) couplée avec un appareil connectés contrôlé par un smart contract.
            </p>
            <a href="/about" class="btn btn-orange">En savoir +</a>
        </div>
        <div class="col-sm"></div>
    </div>
</div>
<!-- Les locations -->
<div class="container-fluid my-4 text-center">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <div class="card mb-4">
                <h5 class="card-header h5 bg-orange"><%= subTitleRents %></h5>
                <div class="card-body">
                    <a href="/rent" class="btn btn-orange">En savoir +</a>
                    <% if (items) { %>
                        <div class="container-fluid mb-4">
                            <div class="row">
                                <% items.forEach(function(item) { %>
                                    <div class="col-sm-4 mt-4">
                                        <div class="card">
                                            <div class="view overlay">
                                            <img class="card-img-top" src="https://mdbootstrap.com/img/Mockups/Lightbox/Thumbnail/img%20(67).jpg" alt="Card image cap">
                                            <a href="/item/<%= item.id %>">
                                                <div class="mask rgba-white-slight"></div>
                                            </a>
                                            </div>
                                            <div class="card-body">
                                                <h4 class="card-title"><%= item.name %></h4>
                                                <a href="/item/<%= item.id %>" class="btn btn-orange">Louer</a>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>
<!-- Contact -->
<div class="container-fluid my-4 text-center">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm-6">
            <!-- Formulaire de contact -->
            <form class="border border-light p-5" action="#!">
                <p class="h4 mb-4"><%= subTitleContact %></p>
                <input type="text" id="defaultContactFormName" class="form-control mb-4" placeholder="Nom (*)">
                <input type="email" id="defaultContactFormEmail" class="form-control mb-4" placeholder="Email (*)">
                <label>Sujet</label>
                <select class="browser-default custom-select mb-4">
                    <option value="" disabled>Choisir une option</option>
                    <option value="1" selected>Informations</option>
                    <option value="2">Prolèmes</option>
                </select>
                <div class="form-group">
                    <textarea class="form-control rounded-0" id="exampleFormControlTextarea2" rows="3" placeholder="Message"></textarea>
                </div>
                <div class="custom-control custom-checkbox mb-4">
                    <input type="checkbox" class="custom-control-input" id="defaultContactFormCopy">
                    <label class="custom-control-label" for="defaultContactFormCopy">Envoyer moi une copie du message</label>
                </div>
                <button class="btn btn-orange btn-block" type="submit">Envoyer</button>
            </form>
        </div>
        <div class="col-sm"></div>
    </div>
</div>
<% include struct/footer.ejs %>